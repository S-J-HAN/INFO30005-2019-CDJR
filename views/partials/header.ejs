<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <title>Drawer</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/css?family=Raleway:300,400" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <link rel="stylesheet" href="/stylesheets/profile.css">
        <link rel="stylesheet" href="/stylesheets/gallery.css">
        <link rel="stylesheet" href="/stylesheets/viewArt.css">
        <link href="https://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="/">Drawer</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <div class="navbar-nav">
                    <li><a class="navlink" href="/photo/new">Create new photo!</a></li>
                    <li><a class="navlink" href="/photo">Explore</a></li>
                </div>
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser){ %>
                        <li class="nav-item">
                            <a class="navlink" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="navlink" href="/register">Sign up</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="navlink" href="/profile/<%= currentUser.username %>"><%= currentUser.username %></a>
                        </li>
                        <li class="nav-item">
                            <a class="navlink" href="/logout">Logout</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </nav>
        <div class="container">
          <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
              <%= success %>
            </div>
          <% } %>
        </div>
