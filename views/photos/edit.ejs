<% include ../partials/header %>
<div class="container">
    <h1 class="text-center mb-3">Update '<%= photo.name %>'</h1>
        <form action="/photo/<%= photo._id %>?_method=PUT" method="POST" >
            <div class="row">
                <div class="col-6 mr-5">
                    <div id="imagePreview">
                        <img id="imagePreviewImage" src="<%= photo.image %>"></img>
                    </div>
                    <div class="input-group mt-3">
                        <label class="custom-file-label" for="imageUpload">Update Image File</label>
                        <input class="custom-file-input" id="imageUpload" type="file" name="imagefile" accept="image/png, image/jpeg">
                    </div>
                    <div class="form-group mt-3">
                        <label for="imageURL">Update URL</label>
                        <input class="form-control" id="imageURL" type="text" name="photo[image]" value="<%= photo.image %>">
                    </div>
                </div>
                <div class="col-5 pl-4">
                    <div class="form-group">
                        <label for="updateTitle">Title</label>
                        <input class="form-control" id="updateTitle" type="text" name="photo[name]" value="<%= photo.name %>" size="50">
                    </div>
                    <div class="form-group">
                        <label for="updateDate">Date</label>
                        <input class="form-control" id="updateDate" type="date" name="photo[postAt]" value="<%= moment(photo.postAt).format("YYYY-MM-DD") %>">
                    </div>
                    <div class="form-group">
                        <label for="updateDescription">Description</label>
                        <textarea type="text" class="form-control" id="updateDescription" name="photo[description]" rows="10" cols="50"><%= photo.description %></textarea>
                    </div>
                    <button class="btn btn-primary" type="">Update</button>
                </div>
            </div>
        </form>
</div>
<% include ../partials/footerScript %>
<% include ../partials/footer %>
