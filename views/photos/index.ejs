<% include ../partials/header %>
<main>
    <div class="container home">
        <% photos.forEach(function(photo){ %>
                <a href="/photo/<%= photo._id %>"><h4 class="display-4"><%= photo.name %></h4></a>
                <% if(currentUser && photo.favorite.some((user)=>user.equals(currentUser._id))){ %>
                    <form action="/photo/<%= photo._id %>/unlike?_method=PUT" method="POST">
                        <input class="btn btn-info" type="submit" value="Unlike" id="removeLike">
                        <span><%= photo.likes %></span>
                    </form>
                <% }else{ %>
                    <form action="/photo/<%= photo._id %>/like" method="POST">
                        <input class="btn btn-primary" type="submit" value="Like" id="addLike">
                        <span><%= photo.likes %></span>
                    </form>
                <% } %>
                <a href="/photo/<%= photo._id %>"><img class="card-img-top" src="<%= photo.image %>"></a>

       <% }) %>
    </div>
</main>
<% include ../partials/footerScript %>
<% include ../partials/footer %>
